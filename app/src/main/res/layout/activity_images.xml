<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.tropi.dvjl.tropicom.Images">
    <include layout="@layout/file_bar"
             android:id="@+id/bar"/>

    <LinearLayout
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pour rendre votre publication valide, veuillez ajouter 03 images de votre produit"/>
        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="10dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/img1"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/miniature"/>
        </android.support.v7.widget.CardView>

        <Button
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enregistrer"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/btnsuivant"
            android:textColor="@color/blanc"
            android:background="@drawable/bord"/>


    </LinearLayout>


</LinearLayout>
